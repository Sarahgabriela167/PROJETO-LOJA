  <script>
    // ---------- Dados de produtos (exemplos) ----------
    const PRODUTOS = [
      {id:'b1', titulo:'BÃ­blia Sagrada - Letra Grande', categoria:'fe', preco:69.9, de:99.9, selo:true},
      {id:'b2', titulo:'Harpa CristÃ£ Luxo Capa SintÃ©tica', categoria:'fe', preco:49.9, de:79.9, selo:true},
      {id:'b3', titulo:'BÃ­blia de Estudo (NVI)', categoria:'fe', preco:129.9, de:179.9, selo:false},
      {id:'k1', titulo:'FogÃ£o 4 bocas EconÃ´mico', categoria:'cozinha', preco:899.9, de:1199.9, selo:true},
      {id:'k2', titulo:'Pia Inox 120cm c/ Cuba', categoria:'cozinha', preco:559.9, de:699.9, selo:false},
      {id:'k3', titulo:'Torneira Gourmet FlexÃ­vel', categoria:'cozinha', preco:139.9, de:199.9, selo:true},
      {id:'bth1', titulo:'Kit Torneira de Banheiro', categoria:'banheiro', preco:89.9, de:129.9, selo:true},
      {id:'bth2', titulo:'Cuba de Apoio CerÃ¢mica', categoria:'banheiro', preco:219.9, de:299.9, selo:false},
      {id:'seg1', titulo:'CÃ¢mera Wiâ€‘Fi 1080p Interna', categoria:'seguranca', preco:159.9, de:249.9, selo:true},
      {id:'seg2', titulo:'Kit 2 CÃ¢meras Externas', categoria:'seguranca', preco:399.9, de:549.9, selo:false},
      {id:'o1', titulo:'Jogo de Panos de Prato (12u)', categoria:'outros', preco:39.9, de:59.9, selo:true},
      {id:'o2', titulo:'Tapete Antiderrapante 60x40', categoria:'outros', preco:29.9, de:49.9, selo:false},
    ];

    // ---------- Utils ----------
    const BRL = new Intl.NumberFormat('pt-BR',{style:'currency',currency:'BRL'});
    const grid = document.getElementById('productGrid');
    const cartDrawer = document.getElementById('cartDrawer');
    const cartCount = document.getElementById('cartCount');
    const cartItems = document.getElementById('cartItems');
    const cartTotal = document.getElementById('cartTotal');
    const openCartBtn = document.getElementById('openCart');
    const closeCartBtn = document.getElementById('closeCart');

    function svgDataUri(text){
      const svg = encodeURIComponent(`<?xml version='1.0'?>\n<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 400 400'>\n  <defs>\n    <linearGradient id='g' x1='0' x2='1' y1='0' y2='1'>\n      <stop offset='0' stop-color='%23ff4d4f'/>\n      <stop offset='1' stop-color='%23ff7a45'/>\n    </linearGradient>\n  </defs>\n  <rect width='100%' height='100%' fill='url(%23g)'/>\n  <text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle' font-size='28' font-weight='700' fill='white' font-family='Arial, Helvetica, sans-serif'>${text}</text>\n</svg>`);
      return `data:image/svg+xml;charset=UTF-8,${svg}`;
    }

    function render(products){
      grid.innerHTML = '';
      products.forEach(p=>{
        const card = document.createElement('article');
        card.className = 'card';
        card.setAttribute('data-id', p.id);
        card.setAttribute('data-cat', p.categoria);
        card.innerHTML = `
          <div class='thumb'>
            <img alt='${p.titulo}' src='${svgDataUri(p.titulo)}' />
            ${p.selo?`<span class="badge">PreÃ§o baixo</span>`:''}
          </div>
          <div class='content'>
            <div class='title'>${p.titulo}</div>
            <div class='price-row'>
              <div class='price'>${BRL.format(p.preco)}</div>
              ${p.de?`<del>${BRL.format(p.de)}</del>`:''}
            </div>
            <span class='tag'>Frete grÃ¡tis*</span>
            <div class='actions'>
              <button class='btn primary' data-add='${p.id}'>Adicionar</button>
              <button class='btn secondary' data-buy='${p.id}'>Comprar</button>
            </div>
          </div>`;
        grid.appendChild(card);
      });
    }

    // ---------- Busca / filtros ----------
    function filtrar(){
      const q = document.getElementById('q').value.trim().toLowerCase();
      const cat = document.getElementById('categorySelect').value;
      const list = PRODUTOS.filter(p=>{
        const matchQ = !q || p.titulo.toLowerCase().includes(q);
        const matchC = !cat || p.categoria === cat;
        return matchQ && matchC;
      });
      render(list);
    }

    document.getElementById('searchForm').addEventListener('submit', (e)=>{e.preventDefault(); filtrar();});
    document.getElementById('categorySelect').addEventListener('change', filtrar);
    document.querySelectorAll('.chip').forEach(ch=>{
      ch.addEventListener('click',()=>{
        document.querySelectorAll('.chip').forEach(c=>c.classList.remove('active'));
        ch.classList.add('active');
        const v = ch.dataset.chip || '';
        document.getElementById('categorySelect').value = v;
        filtrar();
        window.scrollTo({top:document.querySelector('.filters').offsetTop, behavior:'smooth'});
      })
    })

    // ---------- Carrinho ----------
    const CART_KEY = 'lojinha_cart_v1';
    let cart = JSON.parse(localStorage.getItem(CART_KEY) || '[]');

    function saveCart(){
      localStorage.setItem(CART_KEY, JSON.stringify(cart));
    }
    function addToCart(id){
      const item = cart.find(i=>i.id===id);
      if(item){ item.qtd++; }
      else{ cart.push({id, qtd:1}); }
      bounceCartEmoji();
      updateCartUI();
      saveCart();
    }
    function removeFromCart(id){
      cart = cart.filter(i=>i.id!==id);
      updateCartUI();
      saveCart();
    }
    function changeQty(id,delta){
      const item = cart.find(i=>i.id===id);
      if(!item) return;
      item.qtd = Math.max(1, item.qtd + delta);
      updateCartUI();
      saveCart();
    }
    function cartDetails(){
      return cart.map(ci=>{
        const p = PRODUTOS.find(x=>x.id===ci.id);
        return {...p,qtd:ci.qtd, subtotal:p.preco*ci.qtd};
      });
    }
    function updateCartUI(){
      const det = cartDetails();
      const total = det.reduce((s,i)=>s+i.subtotal,0);
      cartCount.textContent = det.reduce((s,i)=>s+i.qtd,0);
      cartItems.innerHTML = det.length? det.map(i=>`
        <div class='item'>
          <img alt='${i.titulo}' src='${svgDataUri(i.titulo)}' width='48' height='48' />
          <div>
            <div style='font-weight:700'>${i.titulo}</div>
            <small>${BRL.format(i.preco)} Â· <button style='border:0;background:none;color:var(--brand);cursor:pointer' data-remove='${i.id}'>remover</button></small>
          </div>
          <div style='display:flex;gap:6px;align-items:center'>
            <button class='btn secondary' data-qty='-1' data-id='${i.id}' title='Diminuir'>âˆ’</button>
            <strong>${i.qtd}</strong>
            <button class='btn secondary' data-qty='1' data-id='${i.id}' title='Aumentar'>+</button>
          </div>
        </div>`).join('') : "<small style='color:var(--muted)'>Seu carrinho estÃ¡ vazio</small>";
      cartTotal.textContent = BRL.format(total);
    }

    function openCart(){ cartDrawer.classList.add('open'); }
    function closeCart(){ cartDrawer.classList.remove('open'); }
    openCartBtn.addEventListener('click', openCart);
    closeCartBtn.addEventListener('click', closeCart);
    document.getElementById('checkoutBtn').addEventListener('click', ()=>{
      if(cart.length===0){ alert('Seu carrinho estÃ¡ vazio.'); return; }
      alert('Compra simulada! Obrigado por comprar na Lojinha da Sarah.');
      cart = []; saveCart(); updateCartUI(); closeCart();
    });

    cartItems.addEventListener('click', (e)=>{
      const t = e.target;
      if(t.dataset.remove){ removeFromCart(t.dataset.remove); return; }
      if(t.dataset.qty){ changeQty(t.dataset.id, Number(t.dataset.qty)); return; }
    });

    // ---------- InteraÃ§Ãµes nos cards ----------
    grid.addEventListener('click', (e)=>{
      const add = e.target.closest('[data-add]');
      const buy = e.target.closest('[data-buy]');
      if(add){ addToCart(add.dataset.add); }
      if(buy){ addToCart(buy.dataset.buy); openCart(); }
    });

    // ---------- Cadastro ----------
    document.getElementById('cadastroForm').addEventListener('submit', (e)=>{
      e.preventDefault();
      const data = Object.fromEntries(new FormData(e.target).entries());
      const LIST_KEY = 'lojinha_cadastros_v1';
      const list = JSON.parse(localStorage.getItem(LIST_KEY) || '[]');
      list.push({...data, dt:new Date().toISOString()});
      localStorage.setItem(LIST_KEY, JSON.stringify(list));
      e.target.reset();
      document.getElementById('cadastroOK').classList.remove('hidden');
      setTimeout(()=>document.getElementById('cadastroOK').classList.add('hidden'), 3000);
    });

    // ---------- Efeitos do emoji do carrinho ----------
    const cartEmoji = document.getElementById('cartEmoji');
    function randomHue(){ return Math.floor(Math.random()*360); }
    function recolorEmoji(){
      const h = randomHue();
      cartEmoji.style.background = `conic-gradient(from ${h}deg, var(--brand), var(--brand-2))`;
    }
    function bounceCartEmoji(){
      recolorEmoji();
      cartEmoji.animate([
        {transform:'scale(1)'},
        {transform:'scale(1.2)'},
        {transform:'scale(1)'}
      ],{duration:300});
    }
    cartEmoji.addEventListener('click', openCart);

    // ---------- InicializaÃ§Ã£o ----------
    render(PRODUTOS);
    updateCartUI();

    // Aplicar busca inicial se houver hash ?q=
    const params = new URLSearchParams(location.search);
    if(params.get('q')){
      document.getElementById('q').value = params.get('q');
      filtrar();
    }
  </script>
